@model VehicleManagementSystem.Models.Car

@{
    ViewBag.Title = "AddCar";
}

<h2>AddCar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" ng-app="app" ng-controller="CarController as vm">
        <h4>Add Car</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="make">Make</label>        
            
                <input type="text" class="form-control" ng-model="vm.car.Make" />
               
        
        </div>

        <div class="form-group">
            <label for="model">Model</label>
           
           
                <input type="text" class="form-control" ng-model="vm.car.Model" />
            
       
        </div>

        <div class="form-group">
            <label for="Engine">Engine</label>
           
            
                <input type="text" class="form-control" ng-model="vm.car.Engine" />
 
        
        </div>

        <div class="form-group">
            <label for="noOfDoors">No Of Doors</label>
        
           
                <input type="text" class="form-control" ng-model="vm.car.NoOfDoors" />

      
        </div>

        <div class="form-group">
            <label for="bodyType">BodyType</label>
          
            
                <input type="text" class="form-control" ng-model="vm.car.BodyType" />

        
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-default" ng-click="vm.addClick()">Add Car</button>
             
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/angular.min.js"></script>
<script src="~/app/app.Module.js"></script>
<script src="~/app/car.controller.js"></script>
}
